{
  "name": "istampit-web",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "type": "module",
  "scripts": {
  "dev": "next dev -p ${PORT:-3000}",
  "build": "npm run validate-env && next build",
  "validate-env": "node scripts/validate-env.cjs",
  "export": "next export",
    "build:widget": "node scripts/build-widget.cjs",
  "build:all": "npm run build:widget && npm run build",
  "build:csp": "node scripts/generate-csp.cjs",
    "start": "next start",
    "lint": "next lint",
  "test": "vitest run",
  "test:watch": "vitest",
  "e2e": "playwright test",
  "e2e:ui": "playwright test --ui",
  "e2e:report": "playwright show-report",
  "e2e:ci": "playwright test --reporter=line",
  "lighthouse": "lhci autorun",
  "analyze": "ANALYZE=true next build"
  },
  "dependencies": {
  "next": "14.2.31",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.2",
    "@types/node": "20.11.30",
    "@types/react": "18.2.21",
    "@types/react-dom": "18.2.7",
  "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.57.0",
  "eslint-config-next": "14.2.31",
    "jsdom": "^26.1.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.4",
  "typescript": "5.4.2",
  "vitest": "^3.2.4",
  "@playwright/test": "^1.54.2",

  "@next/bundle-analyzer": "^14.2.5"
  },
  "overrides": {
    "esbuild": "^0.25.0",
    "tmp": "^0.2.3"
  },
  "browserslist": [
    "defaults",
    "not IE 11",
    "not op_mini all"
  ]
}
